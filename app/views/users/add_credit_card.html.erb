<div class="container">
	<div class="create-tabs row">
		<div role="tabpanel" class="col-xs-6 col-xs-offset-3">

			<ul class="nav nav-tabs nav-justified" role="tablist">
				<li><a href="#">Create Account</a></li>
				<li class="active"><a href="#">Add Credit Card</a></li>
				<li><a href="#">Confirm Task</a></li>
			</ul>

			<div class="tab-content" id="create-account">
				<%= form_tag "/users/#{params[:id]}/save-credit-card", method: :post do %>

				<div class="form-group-lg">
					<%= label_tag "Credit Card Number" %>
					<%= text_field_tag :number, nil, class: "form-control", placeholder: "e.g. 5353 1234 1234 1234" %>
				</div>

				<div class="form-group-lg form-inline cc-exp-ccv">
					<%= label_tag "Expiry Date" %>
					<select name="expiry_month" class="form-control">
						<option value="01">01</option>
						<option value="02">02</option>
						<option value="03">03</option>
						<option value="04">04</option>
						<option value="05">05</option>
						<option value="06">06</option>
						<option value="07">07</option>
						<option value="08">08</option>
						<option value="09">09</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</select>

					<%= label_tag "/" %>
					<select name="expiry_year" class="form-control">
						<option value="2015">2015</option>
						<option value="2016">2016</option>
						<option value="2017">2017</option>
						<option value="2018">2018</option>
						<option value="2019">2019</option>
						<option value="2020">2020</option>
						<option value="2021">2021</option>
						<option value="2022">2022</option>
						<option value="2023">2023</option>
						<option value="2024">2024</option>
						<option value="2025">2025</option>
					</select>

					<%= label_tag(:aapl, "CVC Security Code") %>
					<%= text_field_tag :cvc, nil, class: "form-control", placeholder: "123" %>
				</div>

				<div class="form-group-lg">
					<%= label_tag "Name on the card" %>
					<%= text_field_tag :name, nil, class: "form-control", placeholder: "Bill Gates" %>
				</div>

				<div class="form-group-lg">
					<%= label_tag "Address" %>
					<%= text_field_tag :address_line1, nil, class: "form-control", placeholder: "123 Success Street" %>
				</div>

				<div class="form-group-lg">
					<%= label_tag "City / Suburb" %>
					<%= text_field_tag :address_city, nil, class: "form-control", placeholder: "Silicon Valley" %>
				</div>

				<div class="form-group-lg">
					<%= label_tag "Country" %>
					<%= render 'countrySelect' %>
				</div>

				<div class="form-group-lg form-inline cc-exp-ccv">
					<%= label_tag "Postcode" %>
					<%= text_field_tag :address_postcode, nil, class: "form-control", placeholder: "1234" %>

					<%= label_tag "State" %>
					<%= text_field_tag :address_state, nil, class: "form-control", placeholder: "California" %>
				</div>

				<div class="actions submit-form-btn">
					<%= submit_tag nil, class: "btn btn-default" %>
				</div>
				<% end %>
			</div>

		</div>
	</div>
</div>