<%= render 'shared/sidebar' %>

<div class="account-page col-xs-10">

	<section id="summary" class="col-sm-10 col-sm-offset-1">
		<div class="row">
			<div class="thirds col-sm-4 text-center" id="open-tasks-summary">
				<div class="overview-circle">
					<%= @tasks.count %>
				</div>
				Current Tasks
			</div>

			<div class="thirds col-sm-4 text-center" id="bounty-summary">
				<div class="overview-circle">
					$<%= @tasks.count %>
				</div>
				Current Bounty
			</div>

			<div class="thirds col-sm-4 text-center" id="done-vs-donate-summary">
				<div class="overview-circle">
					<%= @tasks.count %>
				</div>
				Tasks Done
			</div>
		</div>
	</section>



	<section id="open-tasks" class="task-list">
			<h2>Current Tasks</h2>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Task</th>
					<th>Time Left</th>
					<th>Bounty</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% if @tasks.count >= 1 %>
					<% @tasks.each do |task| %>
						<tr>
							<td><%= task.title %></td>
							<td><%= task.due_date %></td>
							<td>$<%= task.bounty %></td>
							<td><button class="btn btn-default">Done!</button></td>
						</tr>
					<% end %>
				<% else %>
					<tr>
						<td colspan="4">You have no tasks yet!</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</section>

	<div id="add-new-task" class="text-center">
		<%= link_to new_task_path do %>
			<button type="button" class="btn btn-info btn-lg">Add a new task</button>
			<% end %>
	</div>

</div>